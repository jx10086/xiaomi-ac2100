# 设置固件大小:
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_flow-offload=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_shortcut-fe=n

CONFIG_KERNEL_MIPS_FPU_EMULATOR=y

CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_V2ray=n
CONFIG_PACKAGE_luci-app-ssr-plus_INCLUDE_Simple_obfs=n

# 其他需要安装的软件包:

CONFIG_OPENSSL_PREFER_CHACHA_OVER_GCM=y
CONFIG_V2RAY_COMPRESS_UPX=y
CONFIG_PACKAGE_bash=n
CONFIG_PACKAGE_htop=n
CONFIG_PACKAGE_nano=n
CONFIG_PACKAGE_wget=n
CONFIG_PACKAGE_libustream-wolfssl=y
CONFIG_PACKAGE_tcpdump-mini=n
CONFIG_OPENSSL_OPTIMIZE_SPEED=n
CONFIG_PACKAGE_boost=y
CONFIG_PACKAGE_boost-system=y
CONFIG_PACKAGE_ethtool=n

# cifsmount
CONFIG_PACKAGE_kmod-fs-cifs=n
CONFIG_PACKAGE_kmod-nls-utf8=n
CONFIG_PACKAGE_kmod-crypto-misc=n

# wireguard
CONFIG_PACKAGE_kmod-wireguard=n